<h1>All Posts</h1>

<div class="post-info">
  <% if signed_in? %>
    <h4><%=@post.title %></h4><br>
    <p>
      <strong>Posted by: <%= "(#{current_user.id})" %></strong>
      <br>
      <%= @post.body %>
    </p>
    <% else %>
    <h4><%=@post.title %></h4><br>
    <p>
      <%= @post.body %>
    </p>
    <% end %>
</div>
